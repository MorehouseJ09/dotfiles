# devise is for home-cooked authentication storing
gem 'devise', '>= 2.2.3'
# this is useful for easy environment variables etc
gem 'figaro', '>= 0.5.3'
# cancan is for authentication access controls -- ie ... setting up admins etc
gem 'cancan', '~> 1.6.9'
# add rolify to help us define roles for our users etc
gem 'rolify', '~> 3.2.0'

gem 'amico'
####### ASSETS / FRONT END BASED GEMS #########
