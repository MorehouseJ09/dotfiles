source 'https://rubygems.org'

# global requirements
gem 'rails', '3.2.12'
# enable active model 4.0 for this build
# mongodb is our primary database in the application
gem 'mongoid', '~> 3.0.0'
# enable active model for this particular application
# initialize rake for all tasks related to the application etc
gem 'rake', '10.0.3'
####### API GEMS ########
# for now lets use the aws server to serve to our s3 buckets
# in the future check out the rightserve application https://github.com/rightscale/right_aws
gem 'aws', '~>2.8.0' 
# paper clip is useful for attaching s3 images / files onto active record models. We can abstract away our storage with this easily
gem 'paperclip', '~>3.4.1' 

##### SEARCHING / INDEXING --- ELASTIC SEARCH #####
# allow us to index directly from our rails application
gem 'tire', '~>0.5.4'

##### #NOTIFICATIONS / PUSH MESSAGES #######
