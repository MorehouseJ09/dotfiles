[core]
	excludesfile = ~/.gitignore
	editor = vim

[init]

	templatedir = ~/dotfiles/git-template

[push]
	default = simple

[color]
	ui = true


[alias]

	# configuration
	cn = config --list
	bb = browse
	
	# help command shortcut
	h = help

	# clone shortcut
	cl = clone
	in = init

	# save current commit and ammend
	sa = commit -a --amend --no-edit 

	# add helpers
	a = add
	aa = add --all

	# status + logs
	s = status --short --branch
	# from http://fredkschott.com/post/2014/02/git-log-is-so-2005/
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit

	# push  / pull
	p = push
	pf = push --force
	pi = push --set-upstream
	pt = push --tags
	pu = pull

	# commits
	i = commit -m 
	ia = commit -a -m

	# branch aliases
	b = branch
	ba = branch -a

	# checkout 
	c = checkout
	co = checkout

	# diff helpers
	df = diff
	d = diff

	# submodule additions
	su = submodule foreach --recursive git submodule update --init
	sr = submodule foreach --recursive "git  add --all . && git stash && git fetch && git checkout master"

	# merge helpers
	m = merge --no-commit --no-ff
	me = merge

	# stash / fetch shortcuts
	st = stash
	f = fetch
	
	# list versioned files on the head
	lh = ls-tree -r --name-only HEAD

	# tag shortcuts
	tl = tag --list
	pp = push --tags 
	tt = tag
	t = tag
	th = help tag

# useful for hub commands
[github]
	password = !security find-generic-password -gs github.password -w | tr -d '\n'
	
[credential]
	helper = osxkeychain

# url shorthands
[url "git@github.com:"]
        insteadOf = "gh:"
        pushInsteadOf = "github:"
        pushInsteadOf = "git://github.com/"

# example: g clone gist://$GISTID
[url "git@gist.github.com:"]
        insteadOf = "gist:"
        pushInsteadOf = "gist:"
        pushInsteadOf = "git://gist.github.com/"

