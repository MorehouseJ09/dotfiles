[core]
	excludesfile = ~/.gitignore
	editor = vim

[push]
	default = simple

[color]
	ui = true

[alias]

	# clone shortcut
	cl = clone

	# save current commit and ammend
	sa = commit -a --amend --no-edit 

	# add helpers
	a = add
	aa = add --all

	# status + logs
	s = status --short --branch
	lg = log -p

	# push + pull
	p = push
	pu = push

	# commits
	i = commit -m 
	ia = commit -a -m

	# branch aliases
	b = branch
	ba = branch -a

	# 
	c = checkout
	df = diff

	# submodule additions
	pup = submodule foreach --recursive git submodule update --init

	# merge helpers
	m = merge --no-commit --no-ff
	me = merge

	# stash / fetch shortcuts
	st = stash
	f = fetch

# useful for hub commands
[github]
	password = !security find-generic-password -gs github.password -w | tr -d '\n'
	
[credential]
	helper = osxkeychain

# url shorthands
[url "git@github.com:"]
        insteadOf = "gh:"
        pushInsteadOf = "github:"
        pushInsteadOf = "git://github.com/"

# example: g clone gist://$GISTID
[url "git@gist.github.com:"]
        insteadOf = "gist:"
        pushInsteadOf = "gist:"
        pushInsteadOf = "git://gist.github.com/"

