[core]
  excludesfile = ~/.gitignore
  editor = vim

[init]
  templatedir = ~/dotfiles/git-template

[push]
  default = simple

[color]
  ui = true


[alias]
  # configuration
  cn = config --list

  # browse shortcuts
  bb = browse
  bi = browse -- issues
  
  # help command shortcut
  h = help

  # clone shortcut
  cl = clone
  clr = clone --recursive
  sc = !sh -c "git submodule update --init --recursive"
  sup = submodule foreach "git fetch && git stash && git checkout origin/master"
  # clone into the public project repository list
  clp = !sh -c 'cd $HOME/.public && hub clone "$@"' -
  in = init

  # save current commit and ammend
  sa = commit -a --amend --no-edit 
  ame = commit --amend -m 

  # add helpers
  a = add
  aa = add --all

  # status + logs
  s = status --short --branch
  # from http://fredkschott.com/post/2014/02/git-log-is-so-2005/
  lg = log --color --date=local --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  # diff / changes
  changes = diff --name-status -r
  diffstat = diff --stat -r

  # push
  p = push
  pf = push --force
  pi = push --set-upstream
  pt = push --tags

  # pull
  pu = pull
  new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
  fp = !sh -c 'git fetch && git pull'

  # commits
  i = commit -m 
  ia = commit -a -m

  # branch aliases
  b = branch
  ba = branch -a

  # checkout 
  c = checkout
  co = checkout

  # diff helpers
  df = diff
  d = diff

  # submodule additions
  su = submodule foreach --recursive git submodule update --init
  sr = submodule foreach --recursive "git  add --all . && git stash && git fetch && git checkout master"

  # merge helpers
  m = merge --no-commit --no-ff
  me = merge

  # stash / fetch shortcuts
  st = stash
  f = fetch
  
  # list versioned files on the head
  ls = ls-tree -r --name-only HEAD

  # tag shortcuts
  t = tag
  td = tag --delete
  tl = tag --list
  pt = push --tags 
  th = help tag
  save = !sh -c 'git sa && git pf' 

  # legit mappings
  switch = !legit switch \"$@\"
  branches = !legit branches
  sprout = !legit sprout \"$@\"
  unpublish = !legit unpublish \"$@\"
  harvest = !legit harvest \"$@\"
  sync = !legit sync \"$@\"
  publish = !legit publish \"$@\"
  graft = !legit graft \"$@\"

# useful for hub commands
[github]
  password = !security find-generic-password -gs github.password -w | tr -d '\n'

# url shorthands
[url "git@github.com:"]
        insteadOf = "gh:"
        pushInsteadOf = "github:"
        pushInsteadOf = "git://github.com/"

# example: g clone gist://$GISTID
[url "git@gist.github.com:"]
        insteadOf = "gist:"
        pushInsteadOf = "gist:"
        pushInsteadOf = "git://gist.github.com/"


