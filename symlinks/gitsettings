[core]
	excludesfile = ~/.gitignore
	editor = vim

[init]

	templatedir = ~/dotfiles/git-template

[push]
	default = simple

[color]
	ui = true


[alias]

	# configuration
	cn = config --list
	bb = browse
	
	# help command shortcut
	h = help

	# clone shortcut
	cl = clone
	in = init

	# save current commit and ammend
	sa = commit -a --amend --no-edit 

	# add helpers
	a = add
	aa = add --all

	# status + logs
	s = status --short --branch
	lg = log -p

	# push 
	p = push
	pf = push --force
	pi = push --set-upstream
	pt = push --tags
	pq = push --force

	# commits
	i = commit -m 
	ia = commit -a -m

	# branch aliases
	b = branch
	ba = branch -a

	# 
	c = checkout

	# diff helpers
	df = diff
	d = diff

	# submodule additions
	pu = pull
	pup = submodule foreach --recursive git submodule update --init

	# merge helpers
	m = merge --no-commit --no-ff
	me = merge

	# stash / fetch shortcuts
	st = stash
	f = fetch
	
	# list versioned files on the head
	lh = ls-tree -r --name-only HEAD

	# tag shortcuts
	tl = tag --list
	tp = push --tags 
	tt = tag
	th = help tag

# useful for hub commands
[github]
	password = !security find-generic-password -gs github.password -w | tr -d '\n'
	
[credential]
	helper = osxkeychain

# url shorthands
[url "git@github.com:"]
        insteadOf = "gh:"
        pushInsteadOf = "github:"
        pushInsteadOf = "git://github.com/"

# example: g clone gist://$GISTID
[url "git@gist.github.com:"]
        insteadOf = "gist:"
        pushInsteadOf = "gist:"
        pushInsteadOf = "git://gist.github.com/"

