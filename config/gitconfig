[core]
	
	excludesfile = ~/dotfiles/config/gitignore
	editor = vim

[push]
	default = matching

[color]
	ui = true

[alias]

	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	lg = log -p

# useful for hub commands
[github]
	password = !security find-generic-password -gs github.password -w | tr -d '\n'
	
[credential]
	helper = osxkeychain


